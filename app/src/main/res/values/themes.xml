<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textViewStyle">@style/TextAppearance.App.Widget.TextView</item>
        <item name="primaryButtonTheme">@style/Widget.Button.Primary</item>
    </style>

    <style name="Theme.App.Lilac" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="buttonNormalColor">@color/buttonNormal</item>
        <item name="buttonHighlightColor">@color/buttonHighlight</item>
        <item name="buttonTextColor">@color/buttonText</item>
        <item name="iconColor">@color/icon</item>
        <item name="bgCardView">@color/bgCardView</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

    <style name="Theme.App.Mint" parent="Base.Theme.App">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/mintColorAccent</item>
        <item name="primaryTextColor">@color/mintPrimaryText</item>
        <item name="buttonNormalColor">@color/mintButtonNormal</item>
        <item name="buttonHighlightColor">@color/mintButtonHighlight</item>
        <item name="buttonTextColor">@color/mintButtonText</item>
        <item name="iconColor">@color/mintIcon</item>
        <item name="bgCardView">@color/mintbgCardView</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">?attr/buttonHighlightColor</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>
    <style name="SettingsHolderTextViewStyle">
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
        <item name="android:background">@drawable/ripple_background</item>
    </style>
    <style name="SettingsTextValueStyle">
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="MaterialSectionLabelStyle">
        <item name="android:layout_marginStart">@dimen/label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsSectionLabelStyle" parent="@style/MaterialSectionLabelStyle">
        <item name="android:layout_marginStart">@dimen/settings_label_start_margin</item>
    </style>

    <style name="SettingsHolderTextViewOneLinerStyle" parent="@style/SettingsHolderTextViewStyle">
        <item name="android:paddingTop">@dimen/bigger_margin</item>
        <item name="android:paddingBottom">@dimen/bigger_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
        <item name="android:background">@drawable/ripple_background</item>
    </style>
    <style name="SettingsTextLabelStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <style name="TextAppearance.App.Widget.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>



    <style name="Theme.MyDictionary" parent="Base.Theme.App" />
</resources>