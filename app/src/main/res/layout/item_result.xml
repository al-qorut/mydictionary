<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    ads:cardBackgroundColor="?attr/colorPrimary"
    app:cardCornerRadius="15dp"
    android:layout_margin="@dimen/medium_margin"
    app:cardElevation="20dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:padding="@dimen/medium_margin"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_kata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/primaryTextColor"
            tools:text="Kata yang dicari"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text_root"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:gravity="end"
            android:layoutDirection="rtl"
            android:justificationMode="inter_word"
            android:textColor="?attr/primaryTextColor"
            tools:text="@string/body_about"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_kata"/>
        <TextView
            android:id="@+id/text_arti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:gravity="start|end"
            android:justificationMode="inter_word"
            android:textColor="?attr/primaryTextColor"
            tools:text="@string/body_about"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_root"/>

        <TextView
            android:id="@+id/text_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:textColor="?attr/primaryTextColor"
            android:gravity="start"
            tools:text="@string/body_about"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@color/transparent_black"
            app:layout_constraintTop_toBottomOf="@+id/text_arti"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:id="@+id/image_share"
            app:tint="?attr/iconColor"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_share_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintTop_toTopOf="@id/view1"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:id="@+id/image_favorite"
            app:tint="?attr/iconColor"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_favorite_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/image_share"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintTop_toTopOf="@id/view1"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:id="@+id/image_copy"
            app:tint="?attr/iconColor"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_content_copy_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/image_favorite"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintTop_toTopOf="@id/view1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>